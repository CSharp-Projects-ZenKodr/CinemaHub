@using Microsoft.AspNetCore.Http
@model CinemaHub.Web.ViewModels.Account.LoginInputModel;
<div class="login-wrapper" id="login-content">
    <div class="login-content">
        <a href="#" class="close">x</a>
        <h3>Login</h3>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="alert-danger"></div>
            <div class="row">
                <label asp-for="Email">
                    Username:
                    <input type="text" asp-for="Email" id="username" required="required" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </label>
            </div>
            <div class="row">
                <label asp-for="Password">
                    Password:
                    <input type="password" asp-for="Password" id="password" placeholder="******" required="required" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </label>
            </div>
            <div class="row">
                <div class="remember">
                    <div>
                        <input type="checkbox" asp-for="RememberMe"><span>Remember me</span>
                    </div>
                    <a asp-area="Identity" asp-page="/Account/ForgotPassword">Forget password ?</a>
                </div>
            </div>
            <div class="row">
                <button type="submit">Login</button>
            </div>
            @if (Model != null)
            {
                @Html.Hidden("returnUrl", this.Context.Request.Path.ToString() != "/login" ? this.Context.Request.Path : new PathString("/"));
            }
        </form>
    </div>
</div>